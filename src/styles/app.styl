@require "normalize.styl"
@require "codemirror.css"
@require "solarized.css"

html, body
  background #e0e0e0

body
  display flex
#app
  display flex
  flex-direction column
  flex 1

#header
  background #F4F4F4
  font-size 12px
  font-family "Helvetica Neue"
  color #888
  //height 24px
  box-sizing border-box
  padding 6px 8px
  a
    color #35AADB
    text-decoration none
    &:hover
      text-decoration underline
  .right
    .button
      margin-left 7px
  .left
    .button
      margin-right 7px

.right
  float right

.left
  float left

.button, #header a.button
  color #C41A6E
  font-weight 500
  text-decoration none

.button:hover, #header a.button:hover
  text-decoration underline
  cursor pointer

.description
  background-color rgba(255,255,255,0.3)
  padding 10px
  margin 20px 10%
  font-size 13px
  color #555
  //border 1px solid rgba(0,0,0,0.06)

.CodeMirror
  display flex
  flex-direction column
  flex 1
  padding 8px 4px 4px 8px
  //border 1px solid #C2C2C1

.CodeMirror-scroll
  flex 1
  height auto

#parsed-output
  background #002B37
  color #839496
  width 100%

.text-link
  text-decoration underline
  color #999

.editable-text
  textarea
    box-sizing border-box
    width 100%
    margin 10px 0
  .as-owner
    &:hover
      cursor text
      text-decoration underline
  a
    cursor pointer

.editable-text input, .editable-text textarea
  outline 0
  padding 3px 5px
  font-size 14px
  background-color rgba(255,255,255,0.3)
  border none

.options
  position absolute
  z-index 10
  bottom 0
  width 100%
  border-top 4px solid rgba(255,255,255,0.08)
  padding 10px 0
  box-sizing border-box

.options, .options .CodeMirror
  background #1F071C
  text-shadow none

.parse-output
  .parse-tag
    display inline-block
    margin 0 6px 6px 6px
    padding 6px 0px 0px 6px
    background rgba(255,255,255,0.04)
    border-bottom 1px solid rgba(255,255,255,0.08)
    &:hover
      border-bottom 1px solid rgba(255,255,255,0.42)
  & > .parse-tag
    margin-top 6px
    background transparent
    border-bottom none !important
    &:first-child
      border-top none
    & > .tag-name
      display block
      margin 0 0 8px 0
    & > .parse-tag
      display block
  span
    display inline-block
    padding-right 6px
  .tag-name
    display inline-block
    color white
    margin-bottom 6px

.parse-sep
  border-bottom 4px solid rgba(255,255,255,0.08)

.show-brackets
  .parse-tag
    &:before
      content "["
    &:after
      content "]"

.show-brackets .parse-tag:before, .show-brackets .parse-tag:after
  display inline-block
  padding-right 6px

.re-v-split-splitter, .rc-h-split-splitter
  flex 0 0 14px !important

.re-v-split-splitter:hover div, .rc-h-split-splitter:hover div
  background rgba(0,0,0,1) !important

.re-v-split-splitter:hover, .rc-h-split-splitter:hover
  background transparent !important

.rc-h-split-splitter
  & > div
    height 40px !important
    width 6px !important
    margin-left 4px !important
    background rgba(0,0,0,0.3)

.re-v-split-splitter
  & > div
    width 40px !important
    background rgba(0,0,0,0.3)
    height 6px !important
    margin-top 4px !important

.re-v-split-splitter > div > div, .rc-h-split-splitter > div > div
  display none

.hidden
  display none !important

